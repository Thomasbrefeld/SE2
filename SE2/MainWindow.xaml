<Window x:Class="SE2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SE2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <TabControl>
            <TabItem Header="Main">
                <Label Content="Main page content" />
            </TabItem>
            <TabItem Header="To-Do List">
                <Grid>
                    <TextBox Height="33" Width="150" HorizontalAlignment="left" VerticalAlignment="Top" Margin="18,6,0,0" >
                        
                    </TextBox>
                    <Button Height="33" Width="70" HorizontalAlignment="left" VerticalAlignment="Top" Margin="186,6,0,0">
                        Add Item
                    </Button>
                    <ListBox Height="150" Width="238" HorizontalAlignment="left" VerticalAlignment="Top" Margin="18,50,0,0">
                        <ItemsControl x:Name="toDoListItemList"> 
                            
                        </ItemsControl>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="Reminders">
                <Calendar x:Name="calendar"/>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
